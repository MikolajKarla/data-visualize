# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================

# Database Configuration for Docker Compose
POSTGRES_DB=data_visualize_prod
POSTGRES_USER=prod_admin
POSTGRES_PASSWORD=CHANGE_ME_VERY_SECURE_PROD_PASSWORD_2024!

# Legacy Database Configuration (for direct connection)
DBUSER=prod_admin
DBPORT=5432
DBPASSWORD=CHANGE_ME_VERY_SECURE_PROD_PASSWORD_2024!
DBHOST=db

# JWT Configuration
JWT_SECRET_KEY=CHANGE_ME_VERY_SECURE_JWT_SECRET_KEY_FOR_PRODUCTION_2024!
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Production Settings
NODE_ENV=production
PYTHON_ENV=production
DEBUG=false

# Next.js Production Settings
NEXT_TELEMETRY_DISABLED=1

# File Upload Settings
MAX_FILE_SIZE=20MB
UPLOAD_DIR=/app/uploads

# Logging
LOG_LEVEL=INFO

# API URLs (update these to your production domains)
NEXT_PUBLIC_API_URL=https://your-api-domain.com
NEXT_PUBLIC_APP_URL=https://your-app-domain.com

# Security Settings
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# Performance Settings
ENABLE_GZIP=true
ENABLE_CACHING=true

# Production Features
ENABLE_DEBUG_TOOLBAR=false
ENABLE_HOT_RELOAD=false

# Monitoring (optional - add your monitoring service credentials)
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here